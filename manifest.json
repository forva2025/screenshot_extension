{
    "manifest_version": 3,
    "name": "Webpage Screenshot Tool",
    "version": "1.0",
    "description": "Take screenshots of visible area and entire webpage",
    "permissions": [
      "activeTab",
      "tabs",
      "scripting",
      "downloads"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Take Screenshot"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }